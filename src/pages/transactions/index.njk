permalink: "/transactions/"
---

<section class="grid gap-6">
  <div class="rounded-lg border p-4 bg-white">
    <h2 class="font-semibold mb-3">Import CSV</h2>
    <div class="flex items-center gap-3">
      <input id="tx-csv-file" type="file" accept=".csv,text/csv" class="border rounded-lg px-3 py-2" />
      <button id="tx-csv-import" class="btn border">Import</button>
    </div>
    <p class="text-xs text-gray-500 mt-2">Columns supported: date, description, amount, type, category, account.</p>
  </div>
  <div class="rounded-lg border p-4 bg-white">
    <h1 class="font-semibold mb-4">Add Transaction</h1>
    <form id="tx-form" class="grid gap-3 sm:grid-cols-2">
      <div class="sm:col-span-1">
        <label class="block text-sm mb-1">Amount</label>
        <input name="amount" type="number" step="0.01" required class="w-full border rounded-lg px-3 py-2" />
      </div>
      <div class="sm:col-span-1">
        <label class="block text-sm mb-1">Date</label>
        <input name="date" type="date" required class="w-full border rounded-lg px-3 py-2" />
      </div>
      <div class="sm:col-span-1">
        <label class="block text-sm mb-1">Type</label>
        <select name="type" class="w-full border rounded-lg px-3 py-2">
          <option value="expense">Expense</option>
          <option value="income">Income</option>
          <option value="transfer">Transfer</option>
        </select>
      </div>
      <div class="sm:col-span-1" id="tx-account-wrap">
        <label class="block text-sm mb-1">Account</label>
        <select name="account" id="tx-account" class="w-full border rounded-lg px-3 py-2">
          <option value="">Select account</option>
        </select>
      </div>
      <div class="sm:col-span-1">
        <label class="block text-sm mb-1">Category</label>
        <select name="category" id="tx-category" class="w-full border rounded-lg px-3 py-2">
          <option value="">Uncategorized</option>
        </select>
      </div>
      <div class="sm:col-span-1 hidden" id="tx-transfer-from-wrap">
        <label class="block text-sm mb-1">From Account</label>
        <select name="fromAccount" id="tx-transfer-from" class="w-full border rounded-lg px-3 py-2"></select>
      </div>
      <div class="sm:col-span-1 hidden" id="tx-transfer-to-wrap">
        <label class="block text-sm mb-1">To Account</label>
        <select name="toAccount" id="tx-transfer-to" class="w-full border rounded-lg px-3 py-2"></select>
      </div>
      <div class="sm:col-span-2">
        <label class="block text-sm mb-1">Description</label>
        <input name="description" type="text" placeholder="Optional" class="w-full border rounded-lg px-3 py-2" />
      </div>
      <div class="sm:col-span-2 flex justify-end gap-2 mt-2">
        <button type="reset" class="btn border">Clear</button>
        <button type="submit" class="btn bg-primary text-white">Add</button>
      </div>
    </form>
  </div>

  <div class="rounded-lg border p-4 bg-white">
    <h2 class="font-semibold mb-4">Transactions</h2>
    <div class="mb-3 grid gap-2 sm:grid-cols-3">
      <input id="tx-filter-q" placeholder="Search description" class="w-full border rounded-lg px-3 py-2" />
      <select id="tx-filter-category" class="w-full border rounded-lg px-3 py-2"><option value="">All categories</option></select>
      <select id="tx-filter-account" class="w-full border rounded-lg px-3 py-2"><option value="">All accounts</option></select>
    </div>
    <div class="mb-4 rounded-lg border bg-gray-50 p-3">
      <div class="text-xs font-medium text-gray-600 mb-2">More filters</div>
      <div class="grid gap-2 sm:grid-cols-4">
        <div>
          <label class="block text-xs text-gray-600 mb-1">Start date</label>
          <input id="tx-filter-start" type="date" class="w-full border rounded-lg px-3 py-2" />
        </div>
        <div>
          <label class="block text-xs text-gray-600 mb-1">End date</label>
          <input id="tx-filter-end" type="date" class="w-full border rounded-lg px-3 py-2" />
        </div>
        <div>
          <label class="block text-xs text-gray-600 mb-1">Min amount</label>
          <input id="tx-filter-min" type="number" step="0.01" placeholder="0.00" class="w-full border rounded-lg px-3 py-2" />
        </div>
        <div>
          <label class="block text-xs text-gray-600 mb-1">Max amount</label>
          <input id="tx-filter-max" type="number" step="0.01" placeholder="0.00" class="w-full border rounded-lg px-3 py-2" />
        </div>
      </div>
    </div>
    <div id="tx-empty" class="text-sm text-gray-500 hidden">No transactions yet</div>
    <ul id="tx-list" class="divide-y"></ul>
  </div>
</section>
